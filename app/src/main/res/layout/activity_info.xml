<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10pt"
            android:text="This application was created by Patrick Geneva (@goldbattle) for the easy collection of data on a mobile device. You can visit the repository at\: \n \n http://github.com/rpng/android-dataset-recorder/ \n \nAll data is exported on the SD card in the '/dataset_recorder/' folder. Inside this folder there will be a custom folder for each recording run. In the run folder, the 'data_imu.txt' file will hold the IMU data. \n \nIMU data is exported in the following format: timestamp(ms,utc), a_x, a_y, a_z, w_x, w_y, w_z"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <Button
            android:id="@+id/button_done"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:text="Done">
        </Button>

    </LinearLayout>


</LinearLayout>


